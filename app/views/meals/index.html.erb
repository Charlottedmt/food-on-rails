<div id="map"
     <%# style="width: 100%; height: 600px;" %>
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="container">
  <div class="container-body">
    <div class="center-text">
      <h2>Hi <%= current_user.username %> &#128075;</h2>
      <h3>Here are your suggestions!</h3>
    </div>
    <div class="cards-choice">
      <% @meals.each do |meal| %>
        <div class="card-choice">
          <img src="https://via.placeholder.com/80x60" alt="">
          <div class="card-choice-description">
            <h3><%= meal.name %></h3>
            <p><%= meal.restaurant.name %></p>
          </div>
          <div class="card-choice-right">
            <%= link_to "INFO", meal_path(meal), class: "btn btn-primary card-choice-button" %>
            <%# <button class="btn btn-primary card-choice-button">INFO</button> %>
            <!-- simple form nesté pour créer un nouveau choix-->
            <!-- Quand on click sur submit button, on veut déclencher l'action create dans le choice controller-->
            <!-- rediriger vers dashboard-->
            <button type="button" class="btn btn-secondary card-choice-button" data-toggle="modal" data-target="#exampleModal">GO!</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
