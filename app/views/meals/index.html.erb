<div class="map-bg">I'm a map!</div>

<div class="container-body">
  <h2>Hi #USERNAME &#128075;</h2>
  <h3>Here are your suggestions!</h3>

  <div class="cards-choice">
    <% @meals.each do |meal| %>
      <div class="card-choice">
        <img src="https://via.placeholder.com/80x60" alt="">
        <div class="card-choice-description">
          <h3><%= meal.name %></h3>
          <p><%= meal.restaurant_id %></p>
        </div>
        <div class="card-choice-right">
          <button class="btn btn-primary card-choice-button">INFO</button>
          <button class="btn btn-secondary card-choice-button">GO!</button>
        </div>
      </div>
    <% end %>
  </div>
</div>