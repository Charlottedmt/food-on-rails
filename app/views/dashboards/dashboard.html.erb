<% if @choice %>
  <% "it's inside"%>
  <%# <button type="button" class="btn btn-secondary card-choice-button" data-toggle="modal" data-target="#exampleModal">GO!</button> %>
  <%= render 'shared/modal_google', :choice => @choice, :current_position => @current_position %>
<%end%>
<div class="container-body">
  <div class="text-center">
    <h2 style="margin-bottom: 16px">Dashboard</h2>
    <h4>Latest Meal</h4>
  </div>
  <div class="dashboard-top">
    <h3>Dashboard-top-placeholder</h3>
  </div>
  <h4 class="center-text">Favorites</h4>
  <div class="scrolling-wrapper">
    <div class="scrolling-card">
      <div><%= cl_image_tag @choices.first.meal.photo.key, height: 80, width: 80, crop: :pad %></div>
      <div>
        <p><%= @choices.first.meal.name %></p>
      </div>
      <div>
        <p><%= @choices.first.meal.restaurant.name %></p>
      </div>
    </div>
    <div class="scrolling-card">
      <div><%= cl_image_tag @choices.second.meal.photo.key, height: 80, width: 80, crop: :pad %></div>
      <div>
        <p><%= @choices.second.meal.name %></p>
      </div>
      <div>
        <p><%= @choices.second.meal.restaurant.name %></p>
      </div>
    </div>
  </div>
  <hr>
  <div class="results container">
    <div class="row">
      <div class="result-cards col-6">
        <div class="result-icon">
          <img src="https://static.thenounproject.com/png/1180285-200.png" alt="calorie icon">
        </div>
        <p>Calories saved</p>
        <h4><strong>2634 kcal</strong></h4>
      </div>
      <div class="result-cards col-6">
        <div class="result-icon">
          <img src="https://image.flaticon.com/icons/png/128/2599/2599612.png" alt="fat-icon">
        </div>
        <p>Fat saved</p>
        <h4><strong>500 grams</strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="result-cards col-6">
        <div class="result-icon">
          <img src="https://img.icons8.com/ios/452/salt-bae.png" alt="salt-bae">
        </div>
        <p>Sodium saved</p>
        <h4><strong>37 grams</strong></h4>
      </div>
      <div class="result-cards col-6">
        <div class="result-icon">
          <img src="https://icon-library.com/images/muscles_gym_training_protein-512.png" alt="protein-icon">
        </div>
        <p>Protein gained</p>
        <h4><strong>50 grams</strong></h4>
      </div>
    </div>
  </div>
</div>
<br>
<div class="text-center">
  <h4 style="margin-bottom: 16px;">Account</h4>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
</div>